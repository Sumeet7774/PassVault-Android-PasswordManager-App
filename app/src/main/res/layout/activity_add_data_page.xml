<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#DECDF8"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageButton
            android:id="@+id/addDataPage_backButton"
            android:background="@drawable/baseline_arrow_back_ios_new_24"
            android:layout_marginTop="@dimen/_18sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_50sdp"
        android:orientation="vertical"
        android:padding="@dimen/_25sdp">

        <TextView
            android:id="@+id/username_addData_textview"
            android:text="Username"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/username_addData_edittext"
            android:hint="Enter Username"
            android:layout_marginTop="@dimen/_5sdp"
            android:maxLength="10"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textColorHighlight="@color/cardview_dark_background"
            android:inputType="textPersonName"
            android:drawableStart="@drawable/baseline_account_circle_24"
            android:drawablePadding="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            android:background="@drawable/custom_edittext"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp" />

        <TextView
            android:id="@+id/email_addData_textview"
            android:text="Email"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/email_addData_edittext"
            android:hint="Enter Email"
            android:layout_marginTop="@dimen/_5sdp"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textColorHighlight="@color/cardview_dark_background"
            android:inputType="textEmailAddress"
            android:drawableStart="@drawable/baseline_email_24"
            android:drawablePadding="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            android:background="@drawable/custom_edittext"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp" />

        <TextView
            android:id="@+id/password_addData_textview"
            android:text="Password"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/password_addData_edittext"
            android:hint="Enter Password"
            android:layout_marginTop="@dimen/_5sdp"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            android:maxLength="8"
            android:textColor="@color/black"
            android:textColorHighlight="@color/cardview_dark_background"
            android:inputType="textPassword"
            android:drawableStart="@drawable/baseline_lock_outline_24"
            android:drawableEnd="@drawable/eye_visible"
            android:drawablePadding="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            android:background="@drawable/custom_edittext"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp" />

        <TextView
            android:id="@+id/serviceType_addData_textview"
            android:text="Service Type"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/serviceType_addData_edittext"
            android:hint="Enter Service Type For Saving Data"
            android:layout_marginTop="@dimen/_5sdp"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold"
            android:maxLength="15"
            android:textColor="@color/black"
            android:textColorHighlight="@color/cardview_dark_background"
            android:inputType="text"
            android:drawableStart="@drawable/baseline_build_24"
            android:drawablePadding="@dimen/_5sdp"
            android:padding="@dimen/_3sdp"
            android:background="@drawable/custom_edittext"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/saveDataButton"
                android:layout_weight="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_round_button"
                android:layout_marginTop="@dimen/_35sdp"
                android:text="SAVE DATA"
                android:textColor="@color/black"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>