<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#DECDF8"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPasswordPage">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageButton
            android:id="@+id/forgotPasswordPage_backButton"
            android:background="@drawable/baseline_arrow_back_ios_new_24"
            android:layout_marginTop="@dimen/_18sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/forgotPasswordAnimationView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_180sdp"
            app:lottie_rawRes="@raw/forgotpassword"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:background="#DECDF8"
            android:padding="@dimen/_25sdp">

            <TextView
                android:id="@+id/forgotpassword_textview"
                android:text="Forgot Password"
                android:textSize="@dimen/_25sdp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/forgotpassword_message_textview"
                android:text="Please provide your email address below. We'll promptly send you an email containing a link to reset your password."
                android:textSize="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/emailReset_edittext"
                android:hint="Enter Email"
                android:layout_marginTop="@dimen/_20sdp"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:inputType="textEmailAddress"
                android:drawableStart="@drawable/baseline_email_24"
                android:drawablePadding="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                android:background="@drawable/custom_edittext"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:paddingStart="@dimen/_5sdp"
        android:paddingEnd="@dimen/_5sdp"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/emailSendLink_button"
            android:layout_gravity="bottom"
            android:text="Send Email"
            android:textSize="@dimen/_25sdp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:background="@drawable/custom_round_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</RelativeLayout>