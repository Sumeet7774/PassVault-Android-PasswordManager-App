<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardElevation="0dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="@dimen/_30sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/dataUpdatedSuccessful_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data updated successfully"
            android:textStyle="bold"
            android:textSize="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_30sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/bebas_regular" />

        <TextView
            android:id="@+id/dataUpdatedSuccessfully_message_textview"
            android:text="Your data has been successfully updated."
            android:textColor="#526D82"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="@+id/dataUpdatedSuccessful_textview"
            app:layout_constraintStart_toStartOf="@+id/dataUpdatedSuccessful_textview"
            app:layout_constraintTop_toBottomOf="@+id/dataUpdatedSuccessful_textview"
            android:textSize="@dimen/_12sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginBottom="@dimen/_25sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dataUpdatedSuccessfully_message_textview">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/okButtonDataUpdatedSuccesfull_dialogBox"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_weight="1"
                android:backgroundTint="@color/red"
                android:fontFamily="@font/comfortaa_bold"
                android:padding="@dimen/_5sdp"
                android:text="OK"
                android:textColor="#DECDF8"
                android:textSize="@dimen/_12sdp"
                app:strokeColor="@color/black"
                app:strokeWidth="@dimen/_2sdp" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>